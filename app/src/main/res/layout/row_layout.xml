<RelativeLayout
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
        android:src="@drawable/circle"
        />

    <TextView
        android:id="@+id/logoLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="22dp"
        android:text="J"
        android:textColor="#fff"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/profile_image"
        android:gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:text="Sender"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Name or Title" />

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sender"
        android:layout_below="@+id/sender"
        android:layout_marginStart="0dp"
        android:text="jhkjk"
        android:textColor="#000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/subject"
        android:layout_below="@+id/subject"
        android:text="This is the content"
        android:textColor="#9b9a9a"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/sender"
        android:layout_marginEnd="11dp"
        android:text="3.30"
        android:textColor="#668be4"
        android:textSize="13sp" />

    <!--<ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/content"
        android:layout_alignEnd="@+id/time"
        android:src="@drawable/ic_star_border_black_24dp" />-->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/star"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:lottie_fileName="star.json"
                app:lottie_loop="false"
                android:layout_alignBottom="@+id/content"
                android:layout_alignEnd="@+id/time"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                app:lottie_autoPlay="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ececec"
        android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
